[flake8]
max-line-length = 88
extend-ignore =
              # for black
              E203, E231,
              # zealous line lengths
              E501,
              # inconsistent ruling on newlines before bin op
              W503,
              # ambiguous varnames I ./. l etc
              E741,
select = C,E,F,W,B,B950
max_complexity = 15
extend-exclude =
               # auto-generated
               doc/*,
               # hidden
               .*,